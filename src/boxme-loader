[ Config ]

shell.name=boxme-loader
shell.args=init,err1,err2,symbinit,jvbxinit,doidinit

init=bg exec if ($BOOT_VM == $.BOOT_VM) x11 quest .boxme-loader & if ($BOOT_VM != $.BOOT_VM) execute tick Starting...; install nano; find boxme-version $BOOT_VM; if ($OUTPUT == 0) err1; if ($OUTPUT != 0) err2; find boxme-debug-mode $BOOT_VM; set VM_DEBUG_MODE=$OUTPUT; find boxme-bootloader; set VM_BOOTLOADER=$OUTPUT; find type $BOOT_VM; set VM_TYPE=$OUTPUT; if ($VM_TYPE == SYMBIAM) symbinit; if ($VM_TYPE == JVMBOX) jvbxinit; if ($VM_TYPE == DROID2) doidinit; 

symbinit=execute 
jvbxinit=execute 
doidinit=execute 

err1=execute log add error BoxME - Boot failed (file isnt a VM); echo [ BoxME ] Boot failed!; echo [ BoxME ] See logs to more info.; tick; throw;
err2=execute if ($OUTPUT != $BOXME_VERSION) exec log add error BoxME - Boot failed (BoxME is outdated); echo [ BoxME ] Boot failed!; echo [ BoxME ] See logs to more info.; tick; throw;

[ DISPLAY ]

quest.title=BoxME - Boot a Machine
quest.label=Machine setting file:
quest.cmd=execute boxme-loader init
quest.key=BOOT_VM