[ Config ]

name=BoxME
version=1.0
description=Virtual Machines

api.version=1.14
api.error=execute log add error BoxME requires OpenTTY API 1.14; echo [ BoxME ] Loading failed!; echo [ BoxME ] See logs to more info.;

process.name=boxme

include=.boxme-suite,.boxme-loader,/java/lib/settings

config=execute set BOXME_VERSION=1.0; hash .boxme-loader; if ($OUTPUT == 0) bg exec warn BoxME installation is broken, crashing... & sleep 5 & exit; boxme-loader
command=

shell.name=boxme
shell.args=new,update

new=execute boxme-new new
update=execute clone raw.githubusercontent/mrlima4095/BoxME/main/install.sh;
